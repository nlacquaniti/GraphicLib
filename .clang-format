# .clang-format
BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Control how function declarations are formatted
PointerAlignment: Left
AllowAllParametersOfDeclarationOnNextLine: true
AllowShortFunctionsOnASingleLine: None

# Ensure return type and function name are always on the same line
AlwaysBreakAfterReturnType: None
BreakBeforeBraces: Attach

# Break parameters on a new line if they don't fit on the same line
BinPackParameters: false
AlignAfterOpenBracket: DontAlign
PenaltyBreakBeforeFirstCallParameter: 0

# Other general formatting options
ColumnLimit: 90
SortIncludes: false